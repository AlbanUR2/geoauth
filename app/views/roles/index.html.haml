%h1 Listing roles

%table
  %thead
    %tr
      %th Name
      %th Description
      %th

  %tbody
    - @roles.each do |role|
      %tr
        %td= role.name
        %td= truncate(role.description)
        %td 
          = link_to 'Show', role
          = link_to 'Edit', edit_role_path(role)
          = link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Role', new_role_path, class: 'btn primary'
